{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake Configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S", "${workspaceFolder}",       // 源代码目录
          "-B", "${workspaceFolder}/build", // 构建目录
          "-G", "MinGW Makefiles"           // 生成器（根据你的环境选择）
        ],
        "group": "build",
        "problemMatcher": ["$gcc"]
      }, 
      {
        "label": "CMake Build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "${workspaceFolder}/build",
          "--target", "all",
          "--config", "Debug"
        ],
        "dependsOn": ["CMake Configure"],    // 依赖配置任务
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }